{
    "manifest_version": 2,
    "name": "Scrambler",
    "version": "1.0",

    "browser_action": {
        "default_title": "Scrambler"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "notifications",
        "http://*/",
        "https://*/"
    ]

}
